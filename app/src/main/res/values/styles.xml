<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for cardView. -->
    <style name="CardViewStyle">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/cardBackground</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
    </style>

    <!-- Style for the question TextViews. -->
    <style name="QuestionTextView">
        <item name="android:textSize">@dimen/medium_txt_size</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing</item>
        <item name="android:textColor">@color/txtColor</item>
        <item name="android:background">@color/questionBackground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/medium_margin</item>


    </style>

    <!-- Style for the answer TextViews. -->
    <style name="AnswerText">
        <item name="android:textSize">@dimen/medium_txt_size</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing</item>
        <item name="android:textColor">@color/txtColor</item>
        <item name="android:layout_margin">@dimen/medium_margin</item>
    </style>

    <!-- Style for Buttons. -->
    <style name="ButtonStyle">
        <item name="android:textSize">@dimen/medium_txt_size</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing</item>
        <item name="android:textColor">@color/txtColor</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
    </style>

</resources>
